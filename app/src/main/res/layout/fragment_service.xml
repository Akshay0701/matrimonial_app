<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.ServiceFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/curimage"
                android:layout_marginTop="-60dp"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:layout_marginTop="-120dp"
                android:layout_width="match_parent"
                android:src="@drawable/oursservices"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:layout_marginTop="-320dp"
                android:layout_marginBottom="-150dp"
                android:layout_width="match_parent"
                android:src="@drawable/servicepagedesign"
                android:scaleType="centerInside"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:layout_marginTop="-90dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/serivcedesignfooter"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:id="@+id/callNO"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="-60dp"
                android:layout_width="match_parent"
                android:src="@drawable/callno"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:layout_marginTop="-80dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="-90dp"
                android:src="@drawable/footerdesgin"
                android:layout_height="wrap_content"></ImageView>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>