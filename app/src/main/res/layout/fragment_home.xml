<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/maincurv"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_height="wrap_content"></ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/titlelogo"
            android:layout_marginLeft="40dp"
            android:visibility="visible"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/mainimage"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:layout_marginTop="-120dp"
                android:layout_width="match_parent"
                android:src="@drawable/oursservices"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:id="@+id/supportMail"
                android:layout_marginTop="-190dp"
                android:layout_width="match_parent"
                android:src="@drawable/contactus"
               android:scaleType="centerInside"
                android:padding="20dp"
                android:layout_marginLeft="-50dp"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:id="@+id/callNO"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="-60dp"
                android:layout_width="match_parent"
                android:src="@drawable/callno"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:layout_marginTop="-80dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="-90dp"
                android:src="@drawable/footerdesgin"
                android:layout_height="wrap_content"></ImageView>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>